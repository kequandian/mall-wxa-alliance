/* pages/register/index.wxss */

.register-bg {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100vw;
  height: 100%;
}
.join-btn {
  line-height: 150rpx;
  height: 180rpx;
  width: 180rpx;
  font-size: 30rpx;
  text-align: center;
  border-radius: 50%;
  border: 5rpx solid #ccc;
  background: #fff;
  color: #333;
  position: absolute;
  bottom: 30%;
  left: 50%;
  transform: translate(-50%, 0);
  display: flex;
  justify-content: center;
  align-items: center;
}

