/* pages/friend/friend.wxss */
page {
  background: #f0f0f0;
  width: 100%;
  overflow-x: hidden;
}
.item-friend {
  /* border-bottom: 1rpx solid #ccc; */
  margin: 15rpx;
  background: #fff;
}
.user-avatar {
  height: 88rpx;
  width: 88rpx;
  border-radius: 50%;
}
.user-nick {
  text-align: center;
}

.contact {
  /* width: 400rpx; */
  width: 100%;
  justify-content: space-around;
  color: #020203;
}
.contact .address {
  padding: 20rpx;
  background: #f0f0f0;
}
.contact view .add-btn {
  background: #e79b37;
  color: #fff;
  font-size: 28rpx;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
}
.item-friend .btn {
  font-size: 28rpx;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
}

.item-view {
  position: relative;
}

.absolute-btn {
  position: absolute;
  right: 80rpx;
  top: 25rpx;
  padding: 5rpx 15px;
  font-size: 24rpx;
  background: #e79b37;
  color: #fff;
}

.order-head {
  justify-content: space-between;
  margin: 0 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ccc;
  font-size: 24rpx;
}
.product .product-name {
  width: 400rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.product image {
  height: 160rpx;
  width: 160rpx;
  padding: 20rpx;
}
.order-product .more {
  margin: auto;
  width:200rpx;
  text-align: center;
  color: #ccc;
  font-size: 24rpx;
}

.order-price {
  justify-content: flex-end;
  margin: 0 20rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx dotted #ccc;
}

.order-foot {
  justify-content:flex-end;
  padding: 20rpx;
}
.order-foot .btn {
  border: 1rpx solid #ccc;
  margin-left: 20rpx;
}

.no-data {
  text-align: center;
  color: #999;
  padding-top: 200rpx;
}