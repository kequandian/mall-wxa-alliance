/* pages/ally/index.wxss */

page {
  background: #f0f0f0;
}

.page-head {
  /* background: red; */
  display: flex;
  color: #fff;
  font-size: 28rpx;
  position: relative;
  padding: 20rpx 0;
}

.user-nick {
  color: #fff;
  text-align: center;
}

.head-text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.head-absolute {
  position: absolute;
  top: 20rpx;
  bottom: 20rpx;
  right: 0;
  padding-right: 40rpx;
  text-align: right;
}

.head-absolute .btn {
  background: #fff;
  color: #d23f3a;
  padding: 6rpx 10rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  text-align: center;
  position: absolute;
  bottom: 20rpx;
}

.module-view {
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  color: #696162;
  font-size: 28rpx;
  position: relative;
}

.new-order .laber {
  color: #d23f3a;
  padding-bottom: 10rpx;
  font-size: 30rpx;
}

.new-order .flex-row {
  padding: 10rpx;
}

.seen-btn {
  background: #e79b37;
  color: #fff;
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

.consult-btn {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

.title-module {
  padding: 0;
}

.title-module .head {
  /* background: #d23f3a; */
  color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  position: relative;
  padding: 20rpx;
  font-size: 30rpx;
  text-align: center;
}

.title-module .head .van-icon {
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.logistics-btn {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  background: #868181;
  color: #fff;
  padding: 4rpx 10rpx;
  font-size: 24rpx;
}

.order-details {
  background: #fff;
  color: #696162;
  margin: 20rpx;
}

.order-details image {
  width: 710rpx;
}

.date-value {
  background: #515151;
  color: #fff;
  padding: 0 20rpx;
  border-radius: 10rpx;
  margin: 0 10rpx;
}

.tariff {
  border-right: 1rpx solid #999;
  padding: 0 10rpx;
  text-align: center;
}

.tariff:last-child {
  border: 0;
}

.tariff .laber {
  font-size: 20rpx;
}

.make-btn {
  background: #d23f3a;
  color: #fff;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  margin-left: 10px;
}

van-icon {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  background: #fff;
}

.swiper image {
  width: 100%;
  height: auto;
}

.new-user-popup {
  background: transparent;
}

.new-user-popup-main {
  background: transparent;
  position: relative;
}

