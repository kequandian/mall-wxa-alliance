}

.form {
  margin-top: 20rpx;
  height: 100%;
  width: 100%;
  color: #666;
}

.form-row {
  display: flex;
  background: #fff;
  margin: 10rpx 20rpx;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
}

.form .form-row:first-child {
