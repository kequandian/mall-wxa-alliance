/**index.wxss**/

page {
  background: #eff0f1;
}

.container {
  /* padding-top: 200rpx; */
}

.step-row {
  display: flex;
  width: 90%;
  margin: 20rpx auto;
}

.step-row .item-step {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  position: relative;
  height: 100rpx;
  overflow: hidden;
}
.laber {
  height: 100%;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
}

.step-row .item-step:nth-child(1) {
  border-radius: 10rpx 0 0 10rpx;
}
.step-row .item-step:last-child {
  border-radius: 0 10rpx 10rpx 0;
}

.arrow {
  /* position: absolute;
  left: 40%; */
  width: 0;
  height: 0;
  overflow: hidden;
  font-size: 0; /*是因为, 虽然宽高度为0, 但在IE6下会具有默认的 */
  line-height: 0; /* 字体大小和行高, 导致盒子呈现被撑开的长矩形 */
  border-width: 50rpx;
  border-style: solid dashed dashed dashed; /*IE6下, 设置余下三条边的border-style为dashed,即可达到透明的效果*/
  border-color: transparent transparent transparent #e42c2f ;
  margin-right: -60rpx;
}
.arrow2 {
  /* position: absolute;
  left: 40%; */
  width: 0;
  height: 0;
  overflow: hidden;
  font-size: 0; /*是因为, 虽然宽高度为0, 但在IE6下会具有默认的 */
  line-height: 0; /* 字体大小和行高, 导致盒子呈现被撑开的长矩形 */
  border-width: 50rpx;
  border-style: solid dashed dashed dashed; /*IE6下, 设置余下三条边的border-style为dashed,即可达到透明的效果*/
  border-color: #000 #000 #000 transparent;
  margin-left: -20rpx;
  margin-right: -40rpx;
}
.step-row .item-step:nth-child(2) {
  background: #000;
}

.step-row .item-step:nth-child(3)::after {
  /* content: "";
  position: absolute;
  right: 0;
  top: 0;
  width:0;
  height:0;
  overflow:hidden;  /*清除ie6下默认的宽高*/
  font-size: 0; /*是因为, 虽然宽高度为0, 但在IE6下会具有默认的 */
  line-height: 0;
  border-width: 20px;
  border-style: solid;
  border-color: orange blue gray blue;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.user-nick {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.phone-input {
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 10rpx;
  text-align: center;
  width: 80vw;
  margin: 20rpx auto;
}

.phone-input-holder {
  color: #ccc;
}

.flex-row {
  background: #feffff;
  width: 90%;
  margin: 40rpx auto;
  border-radius: 10rpx;
  color: #666;
}

.flex-row .laber {
  width: 150rpx;
  padding-left: 20rpx;
}

.flex-row input {
  flex: 1;
  padding: 20rpx;
}

.code-btn {
  padding: 20rpx;
  background-color: #4faf70 !important;
  color: #fff !important;
}

.sub-btn {
  width: 90%;
  padding: 20rpx;
  margin-top: 100rpx;
}

.button-hover {
