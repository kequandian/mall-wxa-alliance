.amount-view {
  display: inline-block;
  border-radius: 50%;
  min-width: 150px;
  min-height: 150px;
  padding: 5px;
  background: #e42c2f;
  color: white;
  text-align: center;
  line-height: 1;
  box-sizing: content-box;
  white-space: nowrap;
  
}
.amount-view:before {
  content: "";
  display: inline-block;
  vertical-align: middle;
  padding-top: 100%;
  height: 0;
}
.amount-view view {
  display: inline-block;
  vertical-align: middle;
}

.flex-row {
