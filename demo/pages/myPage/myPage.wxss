/**index.wxss**/
view {
	overflow:hidden;
}

.container {
	background-color: #EFEEF4;
}
.personal-header {
	height: 440rpx;
	width: 100%;
	background-color: #f13232;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin: 30rpx;
  border-radius: 50%;
  border: 8rpx solid #ff6f6f;
}

.userinfo-nickname {
  color: #fff;
}

.usermotto {
  margin-top: 200px;
}

.record {
	display: flex;
	flex-direction: row;
	margin-top: 30rpx;
/* 	justify-content:center;
	align-items: center; */
}
.recordItem {
	display: flex;
	flex: 1;
	flex-direction: column;
	color: #fff;
	font-size: 30rpx;
}
.recordItem text {
	/* margin: 0 auto 10rpx auto; */
	margin-top: 20rpx;
	text-align: center;
	/* margin: 20rpx auto 0 auto; */
}
.myOrder {
	position: relative;
	font-size: 32rpx;
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	padding: 15rpx 30rpx;
	background-color: #fff;
}
.all {
	float: right;
	margin-right: 50rpx;
	height: 60rpx;
	line-height: 60rpx;
}
.all-text {
	color: #9B9B9B;
	font-size: 26rpx;
	margin-right: 15rpx;
}

.all-img {
	width: 30rpx;
	height: 30rpx;
}
.borderView {
	height: 5rpx;
	width: 100%;
	background-color: #f2f2f2;
}
.wait {
	display: flex;
	flex-direction: row;
	width: 100%;
	padding: 20rpx 0;
	background-color: #fff;
	margin-top: 5rpx;
	margin-bottom: 20rpx;
}
.waitItem {
	display: flex;
	flex: 1;
	flex-direction: column;
	font-size: 30rpx;
}
.waitItem text {
	margin-top: 20rpx;
	text-align: center;
	/* margin: 20rpx auto 0 auto; */
}
.waitItem image {
	width: 52rpx;
	height: 52rpx;
	margin: auto;
}

.myView {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	/* background-color: #ccc; */
	font-size: 32rpx;
	border-bottom: 3rpx solid #f2f2f2;
	background-color: #fff;
	/* background-color: red; */
	/* border: 1rpx solid #ccc; */

}
.myViewImg1 {
	width: 40rpx;
	height: 40rpx;
	line-height: 40rpx;
	padding: auto 30rpx;

}
.myViewImg {
	width: 50rpx;
	height: 50rpx;
	line-height: 40rpx;
	padding: 10rpx 30rpx 0 30rpx;
	

}
.myView text {
	height: 80rpx;
	line-height: 80rpx;
	display: inline-block;
	vertical-align: top;
}
.myViewImg2 {
	float: right;
	width: 30rpx;
	height: 30rpx;
	margin: 20rpx;
}