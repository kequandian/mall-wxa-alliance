}
.headerSearch image {
  position: absolute;
  top: 18rpx;
  right: 90rpx;
  height: 30rpx;
  width: 30rpx;
  margin: auto 0 auto 0
}

.placeholder {
  font-size: 24rpx;
  color: #d1d1d1;
  margin-left: 20rpx;
  text-align: center;
}
.hit-search {
  width: 100%;
  font-size: 32rpx;
  /* display: inline-flex;
  flex-direction: column; */
  margin: 40rpx;

  display: flex;
  flex-wrap: wrap;
}
.hit-link {
  width: 100%;
  font-size: 26rpx;
}
.hitWordItem {
/*   flex: 1;
  flex-wrap: wrap; */
  line-height: 50rpx;
  flex-wrap: wrap;
  padding: 5rpx;
  background-color: #f2f2f2;
  border-radius: 20rpx;
  margin-left: 50rpx;
  margin-top: 20rpx;
  width: 120rpx;
  height: 50rpx;
  font-size: 26rpx;
  text-align: center;
}
.hit-search text {
  width: 150rpx;
  display: flex;
  flex: 0;
  font-size: 26rpx;
}
.hitWord {
  display: flex;
  flex-wrap: wrap;
  margin-left: 80rpx;
}



