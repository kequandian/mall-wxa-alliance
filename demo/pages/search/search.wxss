.headerSearch {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #f9f9f9;
  padding: 20rpx;

}
.search-icon {
  position: absolute;
  left: 10%;
  top: 33%;
}
.search-img {
  margin: 40rpx 0 auto 20rpx;
}
.headerSearch input {
/*   border: 2rpx solid #ccc; */
  width: 80%;
  height: 60rpx;
  margin: auto;
  border-radius: 15rpx;
  padding-left: 8%;
  background-color: #fff;
/*   background-image:url('../../images/search.png');
