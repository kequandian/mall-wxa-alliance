/* ----- */
.product-name {
  font-size: 24rpx;
  padding: 10rpx 15rpx;
  color: #333;
  width: 300rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.tariff {
  border-right: 1rpx solid #999;
  padding: 0 10rpx;
  text-align: center;
}
.tariff .value {
  font-size: 24rpx;
}
.tariff .laber {
  font-size: 18rpx;
  color: #666;
}
.foot-price {
  justify-content: space-between;
  padding: 30rpx 10rpx;
}
.make-btn {
  font-size: 24rpx;
  background: #d23f3a;
  color: #fff;
  padding: 4rpx 10rpx;
  border-radius: 15rpx;
  margin-left: 10px;
}
