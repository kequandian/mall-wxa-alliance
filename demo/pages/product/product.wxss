@import "../../utils/template/common.wxss";

page {
  height: 100%;
  width: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.headerSearch {
  width: 100%;
  height: 100rpx;

  border-bottom: 2rpx solid #F2F2F2;
  position: relative;
  background: #f2f2f2;
}
.search-icon {
  position: absolute;
  left: 120rpx;
  top: 15rpx;
}
.search-img {
  margin: 40rpx 0 auto 20rpx;
}
.headerSearch input {
  /* border: 2rpx solid red; */
  width: 90%;
  height: 60rpx;

  margin: 20rpx auto;
  border-radius: 10rpx;
  background: #fff;
  padding-left: 20rpx;

}
.headerSearch image {
  position: absolute;
  top: 18rpx;
  right: 90rpx;
  height: 30rpx;
  width: 30rpx;
  margin: auto 0 auto 0;
}

.placeholder {
  font-size: 24rpx;
  color: #c6c6c6;
  margin-left: 20rpx;
  text-align: center;

}

/*------------------------*/
.category-view {
  flex:1;
  display: flex;

  flex-direction: row;
  color: #58575D;


}

.left-view {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  border-right: 3rpx solid #ccc;
}
.left-item {
  padding-left: 30rpx;
  margin: 30rpx auto;
  text-align: center;
  font-size: 32rpx;
  margin-left: 10rpx;

}
.light {
  color: #fc574e;
  border-left: 5rpx solid #fc574e;
  padding-left: 25rpx;
}

.right-view {
  display: flex;
  flex-direction: column;
  text-align: center;
  flex: 1;
}
.right-item {
  border-bottom: 20rpx solid #F2F2F2;
}
.itemI-name {
  margin: 20rpx 0;
  font-size: 30rpx;
  color: #999999;
}
.sub_categories {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 26rpx;
  text-align: center;
  justify-content: left;
  margin: 0 20rpx;
}
.sub-item {
  flex: 20%;
  flex-wrap: wrap;
  margin: 20rpx;
  text-align: left;
  display: flex;
  flex-direction: column;
  height: 100%;
}

.sub-item image {
  width: 100rpx;
  height: 100rpx;
}

